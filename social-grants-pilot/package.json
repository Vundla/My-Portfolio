{
  "name": "social-grants-pilot",
  "version": "1.0.0",
  "description": "Complete end-to-end digital Social Grants pilot system for South Africa",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:security": "npm audit && snyk test",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "build": "npm run lint && npm run test",
    "db:migrate": "knex migrate:latest",
    "db:migrate:prod": "NODE_ENV=production knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:seed:prod": "NODE_ENV=production knex seed:run",
    "db:rollback": "knex migrate:rollback",
    "docker:build": "docker build -t social-grants-api .",
    "docker:run": "docker-compose up",
    "docker:down": "docker-compose down",
    "k8s:deploy": "helm install social-grants-prod infrastructure/helm/socialgrants/",
    "k8s:upgrade": "helm upgrade social-grants-prod infrastructure/helm/socialgrants/",
    "terraform:plan": "cd infrastructure/terraform && terraform plan",
    "terraform:apply": "cd infrastructure/terraform && terraform apply",
    "setup:hooks": "husky install",
    "verify:setup": "node scripts/verify-setup.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.0",
    "redis": "^4.6.7",
    "knex": "^2.5.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "joi": "^17.9.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "winston": "^3.9.0",
    "axios": "^1.4.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.1",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.0",
    "crypto": "^1.0.1",
    "speakeasy": "^2.0.0",
    "node-cron": "^3.0.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "dotenv": "^16.1.4"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "playwright": "^1.35.1",
    "eslint": "^8.43.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "snyk": "^1.1185.0",
    "@types/jest": "^29.5.2",
    "nyc": "^15.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/government/social-grants-pilot.git"
  },
  "keywords": [
    "social-grants",
    "government",
    "digital-transformation",
    "south-africa",
    "sassa",
    "microservices",
    "kubernetes",
    "popia-compliant"
  ],
  "author": "Social Grants Development Team <tech-support@socialgrants.gov.za>",
  "license": "Proprietary",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}